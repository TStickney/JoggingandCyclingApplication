<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_active_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="justuschickens.comp3717.bcit.ca.joggingapplication.ActiveRouteActivity">

    <Switch
        android:text="GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gps_switch"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/washroom_switch"
        android:layout_alignEnd="@+id/washroom_switch" />

    <Switch
        android:text="Washrooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/washroom_switch"
        android:layout_above="@+id/gps_switch"
        android:layout_alignRight="@+id/water_switch"
        android:layout_alignEnd="@+id/water_switch"
        android:layout_marginBottom="13dp" />

    <Switch
        android:text="Shade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shade_switch"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/water_switch"
        android:layout_alignRight="@+id/water_switch"
        android:layout_alignEnd="@+id/water_switch" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/map"
        android:layout_above="@+id/shade_switch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <Switch
        android:text="Water Fountains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/water_switch"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_above="@+id/washroom_switch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
